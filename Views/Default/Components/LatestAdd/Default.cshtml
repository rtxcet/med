@model List<med.Models.Product>

<section class="LatestAdd my-4">
    <div class="container">
        <h2 class="text-center">Son Eklenen Ürünler</h2>
        <p class="subtitle text-center mb-4">Kaliteli ve En hesaplı Medikal ürünler</p>

        <div class="row justify-content-center g-3">
            @foreach (var product in Model)
            {
                <div class="col-12 col-md-4 col-lg-3">
                    <a class="card text-center " href="/Default/Detail/@product.Id">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                        <div class="card-body p-2 d-flex flex-column justify-content-between">
                            <h5 class="card-title mb-2" style="font-size: 0.95rem;">@product.Name</h5>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</section>
