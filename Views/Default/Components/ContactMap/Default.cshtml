@model Contact

<section class="contact-map-section">
    <div class="container">
        <div class="row g-4 align-items-stretch">
            <!-- Google Maps -->
            <div class="col-md-6">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3008.5020255277864!2d28.98579971541563!3d41.058017779295795!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cab705347db17d%3A0x396fbbf729f35772!2zMTkgTWF5xLFzLCBFdGZhbCBIYXN0YW5lc2kgU29rYcSfxLEgTm86NCwgMzQzNjAgxZ5pxZ9saS_EsHN0YW5idWw!5e0!3m2!1str!2str!4v1636815616044!5m2!1str!2str"
                        loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>

            <!-- Contact Form -->
            <div id="contact" class="col-md-6">
                <div class="contact-form">
                    <h4 class="mb-4 text-center">Bize Ulaşın</h4>

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">@TempData["Success"]</div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }


                    <form asp-action="SubmitForm" asp-controller="Contact" method="post">
                        <div class="mb-3">
                            <label for="name" class="form-label">Adı Soyadı</label>
                            <input asp-for="Name" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label for="phone" class="form-label">Telefon</label>
                            <input asp-for="Phone" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Mesaj</label>
                            <textarea asp-for="Description" class="form-control" rows="4" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-success w-100">Gönder</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
