@model List<med.Models.Slider>

<section id="slider" class="container my-4">
    <div class="row">
        <!-- Slider -->
        <div class="col-md-7">
            <div id="medicalCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner rounded shadow">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var slider = Model[i];
                        <div class="carousel-item @(i == 0 ? "active" : "")">
                            <img src="@slider.ImageUrl" class="d-block w-100" alt="Slider @i" />
                        </div>
                    }
                </div>

                <button class="carousel-control-prev" type="button" data-bs-target="#medicalCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true" style="background-color:#28a745"></span>
                    <span class="visually-hidden">Önceki</span>
                </button>

                <button class="carousel-control-next" type="button" data-bs-target="#medicalCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true" style="background-color:#28a745"></span>
                    <span class="visually-hidden">Sonraki</span>
                </button>
            </div>
        </div>


        @await Component.InvokeAsync("Category")



    </div>
</section>
