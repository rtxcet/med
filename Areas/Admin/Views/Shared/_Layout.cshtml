<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <title>Admin Panel</title>

    <!-- Css -->
    <link rel="stylesheet" href="~/Admin/Css/Page/index.css" asp-append-version="true" />

    <!-- Select -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2-bootstrap-5-theme/1.3.0/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
</head>
<body>
    <!-- Sidebar Start -->
    <div id="sidebarBackdrop" class="sidebar-backdrop" onclick="toggleSidebar()"></div>

    <div id="sidebar" class="sidebar">
        <h4 class="text-center py-3 border-bottom">Flas Panel</h4>

        <a href="/Admin"><i class="fas fa-home me-2"></i>Anasayfa</a>

        <div class="dropdown">
            <a class="dropdown-toggle d-flex justify-content-between align-items-center text-white" href="#"
               id="CategoryDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <span><i class="fa-solid fa-list me-2"></i>Kategoriler</span>
            </a>
            <ul class="dropdown-menu bg-dark mx-2" aria-labelledby="CategoryDropdown" style="width: 90%;">
                <li><a class="dropdown-item text-white" href="/Admin/Category/Add">Kategori Ekleme</a></li>
                <li><a class="dropdown-item text-white" href="/Admin/Category/">Kategori Listeleme</a></li>
            </ul>
        </div>

        <div class="dropdown">
            <a class="dropdown-toggle d-flex justify-content-between align-items-center text-white" href="#"
               id="ProductDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <span><i class="fa-solid fa-list me-2"></i>Ürenler</span>
            </a>
            <ul class="dropdown-menu bg-dark mx-2" aria-labelledby="ProductDropdown" style="width: 90%;">
                <li><a class="dropdown-item text-white" href="/Admin/Product/Add">Ürün Ekleme</a></li>
                <li><a class="dropdown-item text-white" href="/Admin/Product/">Ürün Listeleme</a></li>
            </ul>
        </div>


    </div>
    <!-- Sidebar Finsh -->

    <div id="main" class="main">
        <!-- Header Start -->
        <header class="shadow-sm ">
            <div class="container d-flex justify-content-between align-items-center ">
                <!-- Left Side -->
                <div class="left d-flex align-items-center">
                    <span class="toggle-btn " onclick="toggleSidebar()">
                        <i class="fas fa-bars"></i>
                    </span>
                </div>

                <!-- Right Side -->
                <div class="right d-flex align-items-center">
                    <div class="dropdown">
                        <a class="dropdown-toggle text-dark text-decoration-none d-flex align-items-center" href="#"
                           id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user fa-lg rounded-circle me-2"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end mt-2 shadow" aria-labelledby="profileDropdown">
                            <li>
                                <a class="dropdown-item" href="/Admin/Account/">
                                    <i class="fas fa-envelope me-2"></i> E-Posta Değiştir
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/Admin/Account/ChangePassword">
                                    <i class="fas fa-key me-2"></i> Şifre Değiştir
                                </a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li>
                                <a class="dropdown-item text-danger" href="/Admin/Login/Logout">
                                    <i class="fas fa-sign-out-alt me-2"></i> Çıkış Yap
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>
        <!-- Header Finsh -->
        <!-- Main Start -->
        <main>
            @RenderBody()
        </main>
        <!-- Main Finsh -->
    </div>

    <!-- jQuery (ÖNCE) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap Bundle JS (Popper Dahil) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>

    <!-- Select2 JavaScript (EKLEYİN) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/i18n/tr.js"></script>

    <script type="module" src="~/Admin/Js/Page/index.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>